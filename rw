<script>
function updateVotes() {
  const votes = {"维克托": 45, "蔚": 30, "金克斯": 15, "凯特琳": 10};
  let totalVotes = Object.values(votes).reduce((a, b) => a + b, 0);

  for (let character in votes) {
    let percentage = (votes[character] / totalVotes) * 100;
    document.querySelector(`#${character}-bar`).style.width = `${percentage}%`;
    document.querySelector(`#${character}-label`).innerText = `${character}: ${votes[character]}票 (${percentage.toFixed(1)}%)`;
  }
}

window.onload = function() {
  updateVotes();
};

function addComment() {
  const author = document.getElementById('comment-author').value;
  const text = document.getElementById('comment-text').value;

  if (!author || !text) return;

  const commentSection = document.querySelector('.comments');
  const newComment = document.createElement('div');
  newComment.classList.add('comment');

  newComment.innerHTML = `
    <span class="comment-author">${author}</span>
    <span class="comment-date">${new Date().toLocaleString()}</span>
    <p class="comment-text">${text}</p>
  `;

  commentSection.insertBefore(newComment, commentSection.firstChild);

  document.getElementById('comment-author').value = '';
  document.getElementById('comment-text').value = '';
}
</script>
